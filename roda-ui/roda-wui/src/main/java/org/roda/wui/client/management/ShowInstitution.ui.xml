<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:common="urn:import:org.roda.wui.client.common">

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>

    <g:FlowPanel styleName="wui-disposal-confirmation" addStyleNames="wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width skip_padding">
            <g:FlowPanel addStyleNames="col_10 content" ui:field="content">
                <g:FlowPanel styleName="wui-user-data" addStyleNames="wrapper skip_padding">
                    <g:FlowPanel addStyleNames="row full_width no_padding">
                        <g:FlowPanel addStyleNames="wui-data-panel">
                            <g:FlowPanel styleName="browseItemPanelWithMargin">
                                <g:Label addStyleNames="browseItemHeader">
                                    <ui:text from='{messages.showInstitutionTitle}' />
                                </g:Label>
                                <common:TitlePanel iconClass="DisposalSchedule" ui:field="title" />
                                <common:DisposalPolicySummaryPanel ui:field="usedInRulePanel" />
                                <g:Label addStyleNames="browseItemId" ui:field="institutionUUID"
                                         title="{messages.institutionUUIDLabel}" />
                                <g:Label addStyleNames="browseItemId" ui:field="dateCreated"/>
                                <g:Label addStyleNames="browseItemId" ui:field="dateUpdated"/>
                            </g:FlowPanel>
                            <g:FlowPanel styleName="field">
                                <g:Label styleName="label"
                                         ui:field="descriptionLabel">
                                    <ui:text from='{messages.institutionDescriptionLabel}' />
                                </g:Label>
                                <g:HTML styleName="value"
                                        ui:field="descriptionValue" />
                            </g:FlowPanel>
                            <g:FlowPanel styleName="field">
                                <g:Label styleName="label"
                                         ui:field="IDLabel">
                                    <ui:text from='{messages.institutionIDLabel}' />
                                </g:Label>
                                <g:HTML styleName="value"
                                        ui:field="IDValue" />
                            </g:FlowPanel>
                            <g:FlowPanel styleName="field">
                                <g:Label styleName="label"
                                         ui:field="lastSyncDateLabel">
                                    <ui:text from='{messages.institutionLastSyncDateLabel}' />
                                </g:Label>
                                <g:HTML styleName="value"
                                        ui:field="lastSyncDateValue" />
                            </g:FlowPanel>
                            <g:FlowPanel styleName="field">
                                <g:Label styleName="label"
                                         ui:field="accessKeyLabel">
                                    <ui:text from='{messages.institutionAccessKeyLabel}' />
                                </g:Label>
                                <g:HTML styleName="value"
                                        ui:field="accessKeyValue" />
                            </g:FlowPanel>
                            <g:FlowPanel styleName="field">
                                <g:Label styleName="label"
                                         ui:field="statusLabel">
                                    <ui:text from='{messages.institutionStatusLabel}' />
                                </g:Label>
                                <g:HTML styleName="value"
                                        ui:field="statusValue" />
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
            <g:FlowPanel addStyleNames="col_2 last sidebar">
                <g:FlowPanel addStyleNames="sticky-flow">
                    <g:FlowPanel addStyleNames="sticky-padding">
                        <g:Label addStyleNames="h4">
                            <ui:text from="{messages.actions}"/>
                        </g:Label>
                        <g:Button addStyleNames="btn btn-block btn-edit" ui:field="buttonEdit">
                            <ui:text from='{messages.editButton}'/>
                        </g:Button>
                        <g:Button addStyleNames="btn btn-block btn-danger btn-times-circle" ui:field="buttonRemove">
                            <ui:text from='{messages.removeButton}'/>
                        </g:Button>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
